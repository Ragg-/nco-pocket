.NcoComments
    transition .4s transform

.NcoComments-request-opened
    transform translateY(-(24px * 7 + 32px))

.NcoRequest
    display flex
    flex-direction column

& > h1
    margin 0
    margin-bottom 8px
    padding 0

    font-size 14px
    font-weight normal

.NcoRequest_movie-id-input
    margin-bottom 16px

    .input
        flex 1
        margin-right 8px

.NcoRequest_mylists
    flex 1
    overflow auto

    &::-webkit-scrollbar
        width 2px
        overflow hidden
        background #eee

    &::-webkit-scrollbar-thumb
        background #444

.NcoRequest_mylists_list
    display block
    margin 0
    padding 0
    list-style none

.NcoRequest_mylists_item
    display block
    width 100%
    padding 16px 8px
    overflow hidden
    border-bottom 1px solid $color_border_on_white

    font-size 14px
    line-height 1
    white-space nowrap
    text-overflow ellipsis

    cursor pointer

    background-color #fff
    border-radius 4px

    transition-property border-color
    //transition .05s ease-out

    &:hover
        padding-right 4px
        // border-color #444
        // background-color #ccc

    &-inputMovieId
        background-color #eee

    .heading
        padding 0
        transition-property all
        transition-duration 1s

.NcoRequest_mylists_item.selected
    position fixed
    top 0
    left 0

    display flex
    flex-direction column
    // width 100vw
    height 100vh
    padding 0

    .heading
        margin-bottom 0
        @extend .Modal_header

    .NcoRequest_movies
        // height (24px * 7)
        max-height 1000px
        padding 0

.NcoRequest_movies
    max-height 0
    flex 1
    padding 0
    overflow auto

    transition-property all
    transition-duration 1s

    &::-webkit-scrollbar
        width 4px
        overflow hidden
        background #eee

    &::-webkit-scrollbar-thumb
        background $color_static

    &_list
        clearfix()

        display block
        margin 0
        padding 8px 0 0
        overflow hidden

        list-style none

    &_item
        position relative

        width 100px
        max-width 200px
        min-width 100px
        height 150px
        margin-left 16px
        margin-bottom 16px
        float left

        overflow hidden

        &.selected
            &::before
                content "\f00c 再クリックでリクエスト"

                position absolute
                padding 4px

                color white
                font-size  14px
                font-family FontAwesome, 'mplus-2p'

                background-color rgba($color_static, .9)

        &.requested
            &::before
                content "\f00c リクエスト中"

                position absolute
                padding 4px

                color white
                font-size  14px
                font-family FontAwesome, 'mplus-2p'

                background-color rgba($color_success, .9)

        &.alreadyRequested
            &::before
                content "\f00c リクエスト中です！"

                position absolute
                padding 4px

                color white
                font-size  14px
                font-family FontAwesome, 'mplus-2p'

                background-color rgba($color_warn, .9)

        &.requesting
            &::before
                content "\f00c リクエストを送信中..."

                position absolute
                padding 4px

                color white
                font-size  14px
                font-family FontAwesome, 'mplus-2p'

                background-color rgba($color_primary, .9)

        &_thumb
            display block
            width 100%
            max-width 150px

        &_title
            font-size 14px

.NcoRequest_requesting
    padding-left 8px

    .NcoForm
        padding 0

    &_header
        margin-top 0
        margin-bottom 16px

        font-size 16px
        font-weight normal

    &_body
        padding-left 130px

    &_thumb
        margin-left -130px
        margin-right 8px
        float left

        vertical-align top

    &_title
        margin-bottom 8px
        font-weight bold

    &_id
        color #aaa

.NcoRequest_putMovieId
    padding 0 8px

.NcoRequest_putMovieId_header
    margin-top 0
    margin-bottom 16px

    font-size 16px
    font-weight normal

.NcoRequest_putMovieId_message
    padding 12px 0
    margin-left 16px

    color $color_warn

body.platform-win32
    .NcoRequest
        &_requesting_header
            font-weight bold

        &_putMovieId_header
            font-weight bold
