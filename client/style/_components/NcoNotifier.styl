.NcoNotifier
    position absolute
    top 48px
    left 0
    z-index 10

    width 100%
    height 400px
    overflow hidden

    pointer-events none

    &_item
        //animation-name NcoNotifierSlidein
        display none
        // height 100px
        padding 8px 16px

        color black
        background rgba(#fff, .95)
        transform translateY(-100%)
        transform-origin top right
        // background rgba($color_accent, .8)

        pointer-events auto

        & + .NcoNotifier_item
            border-top 1px solid #fff

        // &:hover
        //     display block
        //     transform translateY(0) !important
        //     animation-name NcoNotifierLock !important
        //     animation-iteration-count infinite !important

        &.show
            display block
            animation NcoNotifierSlidein 6s ease-in-out

        &.lock
            display block
            transform translateY(0)
            animation-name none !important

        &.warn
            color #fff
            background hsla(0, 80%, 70%, .95)

        &.info
            color #fff
            background rgba($color_static, .95)

            a
                color #fff

        &_header
            margin-bottom 8px

        &_detailBox
            position relative
            display table-cell
            vertical-align middle
