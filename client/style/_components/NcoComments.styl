@import "nib"

.NcoComments
    position absolute
    top 0
    right 0
    bottom 0
    left 0

    margin 0
    padding 48px 0 0
    overflow auto

    font-size 14px
    list-style none

    &::-webkit-scrollbar
        width 8px
        height 8px
        overflow hidden
        background #eee

    &::-webkit-scrollbar-thumb
        background #444

    &::before
        content ""

        position absolete
        top 0
        left 0

        width 100%
        height 8px

        box-shadow inset 0 0 8px rgba(85, 85, 85, 0.5)

    &-enable-controls
        .NcoComments_item-control
            display block

    &_item
        clearfix()

        display block
        max-width 100%
        padding 4px
        // padding-left (4px + 24px)

        border-bottom 1px solid #ddd

        line-height 1

        &-control
            display none
            background-color rgba($color_warn, .2)

        &-self
            background-color rgba($color_primary, .2)

        &-info
            background-color rgba(#bbb, .4)

        &-comment
            padding-left (8px + 24px + 4px) // 4px = left, top

        &_thumbnail
            width 24px
            height 24px
            margin-left (-24px - 8px)
            margin-right 8px

            float left

            vertical-align middle

        &_content
            max-width 100%
            margin 0
            margin-top 4px
            float left

            line-height 1.2
            font-family inherit
            word-wrap break-word

    &_user
        &_name
            margin 0
            margin-bottom 4px
            font-size 12px

        &_link
            font-size 10px
            color #fff


    .NcoNowPlaying
        padding 8px
        padding-left 16px

#userTooltip
    background-color #000
