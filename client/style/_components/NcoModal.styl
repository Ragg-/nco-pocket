.Modal
    position fixed
    top 0
    left 0

    display flex
    width 100vw
    height 100vh
    opacity 0

    justify-content: center
    align-items: center

    pointer-events none

    transition .3s ease-out
    transition-property opacity
    background-color rgba(250, 250, 250, .95)
    -webkit-backdrop-filter blur(4px)

    &.Modal--show
        opacity 1
        pointer-events all

    &.Modal--mode-window
        display flex

    &.Modal--mode-full
        display block

.Modal_header
    clearfix()

    position sticky
    top 0

    margin-bottom 12px
    padding 16px

    color white
    background-color $color_accent

    &_closing
        //.fa.fa-times
        display block
        width 16px
        height 16px
        float left

        font-size 12px !important
        text-align center
        line-height 16px !important
        text-indent -1px

        cursor pointer

        transition-property background-color
        transition .2s ease-out

        &:hover
            background-color $color_danger

    &_title
        display block
        margin-left 16px
        float left

.Modal_inner
    max-width 100%
    max-height 100%
    padding 16px
    overflow auto
