@import "nib"

.NcoControl
    position relative

    user-select none

    &_mylist
    &_request
        position relative
        height 0
        overflow visible

    &_actions
        position relative
        width 100%
        padding 0 8px

        background-color $color_main
        //border-bottom 1px solid #ddd

        user-select none

        &_btn
            width 60px
            height 44px
            padding 12px

            vertical-align bottom

            //background-color rgba(#eee, .5)
            background-color transparent
            color white
            border none
            outline none
            cursor pointer

            font-size 20px

            transition-property color, background-color
            transition .15s ease-out

            &.skip:hover
                background-color $cmd_skip

            &.comment:active
            &.good:active
            &.mylist:active
            &.request:active
            &.openNsen:active
                background-color $cmd_default

            &.good.received::before
            &.mylist.received::before
                transition-property transform, text-shadow, color
                transition-duration .5s

                text-shadow 0 0 20px $color_warn
                transform scale(1.3)
                color $color_warn

            &.preference
            &.play
                float right

    &_comment
        position relative
        width 100%
        height 40px
        padding 4px

        background-color $color_main

        &.focused
            &_opt
                display inline-block

        $_contentHeight = (@height - 8px)


        &_alert
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            z-index 100

            display none
            padding 12px 8px
            padding-left 16px
            color $color_danger

            background-color rgba($color_main, .9)


        &_opt
            position absolute
            left 0
            right 0
            bottom 100%

            display none
            height 32px
            padding 8px 0
            overflow hidden

            font-size $fsz_sm

            background-color #0dccf2

            &_184
                line-height 1

        &.focus &_opt
            display block


        &_input
            display block
            width 100%
            height $_contentHeight
            padding 6px 4px

            border none
            border-radius 2px 4px 4px 2px
            background-color rgba(lighten($color_main, 20%), .8)

            transition-property background-color
            transition-duration .2s

            font-size $fsz_sm
            font-family "mplus-2p"
            // line-height 32px

            resize none
            outline none

            &::-webkit-input-placeholder
                color rgba(85, 85, 85, .5)
                //color rgba(223, 223, 223, 0.5)

        &.focus &_input
            background-color white
